<script>
  const openBtn = document.getElementById('openVideoModal');
  const closeBtn = document.getElementById('closeVideoModal');
  const modal = document.getElementById('videoModal');
  const iframe = document.getElementById('youtubePlayer');

  // On lit l'URL compl√®te depuis data-src (sans la mettre dans src pour l'instant)
  const initialSrc = iframe.getAttribute('data-src');

  openBtn.addEventListener('click', () => {
    // Au clic, on assigne l'URL (avec autoplay=1) au src de l'iframe
    iframe.src = initialSrc;
    modal.classList.add('active');
  });

  function closeModal() {
    modal.classList.remove('active');
    // On vide le src pour stopper imm√©diatement la vid√©o
    iframe.src = '';
  }

  closeBtn.addEventListener('click', closeModal);

  window.addEventListener('click', (e) => {
    if (e.target === modal) {
      closeModal();
    }
  });
</script>


